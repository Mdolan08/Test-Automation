{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "camelcase": [2, { "properties": "always" }],
        "no-multiple-empty-lines": ["error"],
        "indent": ["error", 4],
        "no-undef": "off"
    }
}
